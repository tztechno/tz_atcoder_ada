with Ada.Text_IO; use Ada.Text_IO;
with Ada.Integer_Text_IO; use Ada.Integer_Text_IO;

procedure Main is
   a, b, c, ans : Integer;
begin
   Get(a); Get(b); Get(c); 
   ans := Integer'Max(a, Integer'Max(b, c)) - Integer'Min(a, Integer'Min(b, c));
   Put_Line(Integer'Image(ans));
end Main;
